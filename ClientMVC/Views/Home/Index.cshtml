@using Microsoft.AspNetCore.Authentication

@if(User.Identity.IsAuthenticated){
    <form method="post">
        <button asp-controller="Home" asp-action="Logout">Logout</button>
    </form>
}


<h2>Claims</h2>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<h2>Properties</h2>

<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>